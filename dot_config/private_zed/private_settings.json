  "features": {
    "inline_completion_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "ui_font_family": "Ellograph CF",
  "buffer_font_family": "Ellograph CF",
  "soft_wrap": "editor_width",
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono"
  },
  "theme": {
    "mode": "dark",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine"
  }
}
