	name = Flavien Bonvin
	email = flavien.bonvin@proton.ch

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[core]
    editor = zed --wait

[alias]
	gsm = git switch main && git pull && git fetch --all && gclean

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
